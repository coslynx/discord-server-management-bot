{
  "name": "bot",
  "version": "1.0.0",
  "description": "A multi-faceted Discord bot for server management and engagement.",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc && tsc-watch --onSuccess \"npm run build:prod\"",
    "build:prod": "tsc --module commonjs --outDir dist",
    "start": "ts-node src/main.ts",
    "start:dev": "ts-node-dev --respawn src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "eslint src//.ts",
    "format": "prettier --write src//.ts",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coslynx/Comprehensive-Discord-Bot.git"
  },
  "author": "Coslynx",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.8",
    "@types/node-fetch": "^2.6.2",
    "@types/spotify-web-api-node": "^5.0.4",
    "@types/ytdl-core": "^4.0.10",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^3.0.0",
    "ts-jest": "^29.5.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "genius-lyrics-api": "^1.0.5",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.8.3",
    "node-fetch": "^2.6.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "promise-retry": "^1.2.1",
    "soundcloud-api": "^1.0.4",
    "spotify-web-api-node": "^5.0.6",
    "ytdl-core": "^4.0.11",
    "youtube-search-api": "^1.1.1"
  }
}